<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/abm_activity_txtRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/main_activity_Tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione ejemplo de que tipo de control desea ver:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/main_activity_btnHelper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SQLiteOpenHelper" />

        <Button
            android:id="@+id/main_activity_btnABM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABM" />

        <Button
            android:id="@+id/main_activity_btnSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recuperar Registros" />

        <Button
            android:id="@+id/main_activity_btnSalir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salir" />

    </LinearLayout>

</LinearLayout>
