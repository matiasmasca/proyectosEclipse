<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/musica_activity_tvReproduciendoTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reproduciendo"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/musica_activity_tvReproduciendo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reproduciendo"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <ImageView
        android:id="@+id/musica_activity_imgArte"
        android:layout_width="204dp"
        android:layout_height="260dp"
        android:src="@drawable/lake_of_fire" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/musica_activity_imbRetroceder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:src="@android:drawable/ic_media_rew" />

        <ImageButton
            android:id="@+id/musica_activity_imbReproducir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:src="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/musica_activity_imbPausar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:src="@android:drawable/ic_media_pause" />

        <ImageButton
            android:id="@+id/musica_activity_imbAdelantar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:src="@android:drawable/ic_media_ff" />

    </LinearLayout>

</LinearLayout>
